{
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "AMAZON_ACCESS_KEY_ID": {
      "required": true
    },
    "AMAZON_SECRET_ACCESS_KEY": {
      "required": true
    },
    "S3_BUCKET": {
      "required": true
    },
    "AWS_REGION": {
      "required": true
    },
    "STRIPE_PUBLISHABLE_KEY": {
      "required": true
    },
    "STRIPE_SECRET_KEY": {
      "required": true
    },
    "SENDGRID_LOGIN": {
      "required": true
    },
    "SENDGRID_PWD": {
      "required": true
    },
    "REDISTOGO_URL": {
      "required": true
    },
    "HOST": {
      "required": true
    }
},
"formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "thp_next_kitten_project",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate db:seed"
  },
  "stack": "heroku-18"
}
